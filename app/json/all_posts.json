---
# This will generate json containing meta-info for all posts
---
[
    {% for post in site.posts %}{
      "id": "{{ forloop.index }}",
      "url": "{{ post.url }}",
      "title": "{{ post.title }}",
      "date": ["{{ post.date | date: "%Y" }}", "{{ post.date | date: "%B" }}", "{{ post.date | date: "%d" }}"],
      "tags": [{% for tag in post.tags %}"{{ tag }}"{% unless forloop.last %}, {% endunless %}{% endfor %}]
    }{% unless forloop.last %},{% endunless %}{% endfor %}
]
